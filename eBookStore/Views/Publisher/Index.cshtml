@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BusinessObject.Models
@model List<Publisher>
@{
    var publisher = ViewBag.Publisher as Publisher;
}
<style>
    /* CSS cho form */
    form {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"] {
        width: 200px;
        padding: 5px;
        margin-bottom: 10px;
    }

    input[type="submit"],
    input[type="button"] {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

    input[type="button"] {
        background-color: #f44336;
    }

    /* CSS cho table */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    a {
        text-decoration: none;
    }
    /* Reset CSS */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Left-content CSS */
    .left-content {
        width: 20%;
        height: 100vh;
        background-color: #333;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.3s;
    }

        .left-content:hover {
            width: 25%;
            background-color: lightblue;
        }

        .left-content a {
            text-decoration: none;
            color: white;
            transition: all 0.3s;
            transform: scale(1);
        }

        .left-content:hover a {
            color: #fff;
            font-size: 20px;
            transform: scale(1.1);
        }

    /* Content CSS */
    .content {
        width: 80%;
        height: 100vh;
        background-color: #f2f2f2;
        margin-left: 20%;
        padding: 20px;
    }
</style>
<div style="display:flex">
    <div class="left-content">
        <a href="/Author" class="link">Author</a>
        <a href="/Publisher" class="link">Publisher</a>
        <a href="/Book" class="link">Book</a>
        <a href="/Login" class="link">LogOut</a>
    </div>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BusinessObject.Models
@model List<Author>
@{
    var author = ViewBag.Author as Author;
}
<style>
    /* CSS cho form */
    form {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"] {
        width: 200px;
        padding: 5px;
        margin-bottom: 10px;
    }

    input[type="submit"],
    input[type="button"] {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

    input[type="button"] {
        background-color: #f44336;
    }

    /* CSS cho table */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    a {
        text-decoration: none;
    }
</style>
<div style="display:flex">
    <div>
        <ul class="menu-hover-fill flex flex-col items-start leading-none text-2xl uppercase space-y-4">
            <li><a href="#" data-text="home">home</a></li>
            <li><a href="#" data-text="archives">archives</a></li>
            <li><a href="#" data-text="tags">tags</a></li>
            <li><a href="#" data-text="categories">categories</a></li>
            <li><a href="#" data-text="about">about</a></li>
        </ul>
    </div>
    <div class="container">
        <form form asp-action="@(author != null ? "Update" : "Insert")" method="post">
            <input hidden type="hidden" id="fname" name="id" value="@(author != null ? author.AuthorId : "")"><br>
            <label for="fname">First name:</label>
            <input type="text" id="fname" name="fname" value="@(author != null ? author.FirstName : "")"><br>

            <label for="lname">Last name:</label>
            <input type="text" id="lname" name="lname" value="@(author != null ? author.LastName : "")"><br>

            <label for="lname">City:</label>
            <input type="text" id="lname" name="city" value="@(author != null ? author.City : "")"><br>

            <label for="lname">Email Address:</label>
            <input type="text" id="lname" name="email" value="@(author != null ? author.EmailAdress : "")"><br>

            <input type="submit" value="Submit">
            <a asp-action="Index"><input type="button" value="Clear"></a>
        </form>

        <h3>List Author:</h3>
        <table>
            <tr>
                <th>AuthorId</th>
                <th>Firts Name</th>
                <th>Last Name</th>
                <th>City</th>
                <th>Action</th>
            </tr>
            @foreach (Author item in Model)
            {
                <tr>
                    <td><a>@item.AuthorId</a></td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.City</td>
                    <td><a asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a> | <a asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a></td>
                </tr>
            }
        </table>
    </div>
</div>


<script>
    // Các phần JavaScript ở đây...
</script>